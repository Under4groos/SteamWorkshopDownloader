<Window x:Class="SteamWorkshopDownloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SteamWorkshopDownloader"
        mc:Ignorable="d"
        MinHeight="350" MinWidth="650"
        MaxHeight="350" MaxWidth="650"
        Title="MainWindow" Height="350" Width="650" Background="#1E1E1E">
    <Grid>
        <Grid x:Name="install_page" Visibility="Visible">
            <Border Background="#2E2E2E" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Margin="70,30,70,30" x:Name="download_" Content="Download steamcmd"  ></Label>
            </Border>

        </Grid>
        <Grid x:Name="main_menu" Visibility="Hidden">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel>
                    <Label Content="App id"></Label>
                    <TextBox x:Name="add_id_game"></TextBox>
                    <Label Content="Addon id"></Label>
                    <TextBox x:Name="add_id"></TextBox>
                    <Button Content="Download" Margin="0,5,0,0" BorderThickness="0" Click="Button_Click"/>
                </StackPanel>
                
            </Grid>
        </Grid>
    </Grid>
</Window>
